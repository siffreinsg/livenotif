{
    "name": "[Name] en live",
    "short_name": "[Name]",
    "description": "Envoie une notification quand [Name] est en live.",
    "version": "2.5.0",
    "applications": {
        "gecko": {
            "id": "[Name]@livenotif.fr",
            "update_url": "https://raw.githubusercontent.com/siffreinsg/livenotif/updates/updates.json"
        }
    },
    "browser_action": {
        "default_title": "[Name] est hors-ligne !",
        "browser_style": true,
        "default_icon": {
            "16": "assets/icon-off16.png",
            "32": "assets/icon-off32.png",
            "48": "assets/icon-off48.png",
            "128": "assets/icon-off128.png"
        }
    },
    "icons": {
        "16": "assets/icon-on16.png",
        "32": "assets/icon-on32.png",
        "48": "assets/icon-on48.png",
        "128": "assets/icon-on128.png"
    },
    "background": {
        "scripts": [
            "init.js",
            "functions.js",
            "data.js",
            "main.js"
        ]
    },
    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
    },
    "permissions": [
        "https://img.youtube.com/*",
        "https://static-cdn.jtvnw.net/*",
        "https://livenotif-api.glitch.me/*",
        "notifications",
        "storage"
    ],
    "author": "Siffrein Sigy",
    "manifest_version": 2
}
